<aura:component controller="FF_ProductController" implements="flexipage:availableForAllPageTypes,force:hasRecordId" description="FF_ProductMainPicture">
    <aura:attribute name="pictureId" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-card slds-align_absolute-center">
        <lightning:fileCard fileId="{!v.pictureId}" hideDescription="true"/>
    </div>

</aura:component>
